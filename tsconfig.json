{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "./build"
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "include": ["src"]
}
